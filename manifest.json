{
  "manifest_version": 3,
  "name": "极简书签管理器",
  "version": "3.2.5",
  "description": "简洁优雅的书签管理插件，支持Chrome书签导入、搜索和组织管理，现已增大弹窗尺寸（450x800px）",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "contextMenus",
    "sidePanel",
    "windows"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "书签管理器 - 点击打开书签管理"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
} 